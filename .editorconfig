# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*.sh]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.pp]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[Vagrantfile]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
